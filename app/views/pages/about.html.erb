</section>
<section class="contact-us-about">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="header-text-block">
					<h1><%= t 'views.pages.about.contact_us' %></h1>
				</div>
				<div class="text-block">
					<h3><%= t 'views.pages.about.tell_us' %></h3>
					<button class="btn btn-primary" href="/contact#email-form"><%= t 'views.pages.about.write_email' %></button>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	// Disable maps scrolling
	$(function() {
		$('#google-maps').onClick(function(e) {
	    	$(this).find('iframe').css('pointer-events', 'auto');
		}).mouseleave(function(e) {
	    	$(this).find('iframe').css('pointer-events', 'none');
		});
	})
</script>