<body class="preload">
    <link rel="stylesheet" href="/assets/navbar.scss">
    <div id="custom-bootstrap-menu" class="navbar navbar-default navbar-static-top nav-preload" role="navigation">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="navbar-header"><a class="navbar-brand" href="#">Awesome</a>
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse navbar-menubuilder">
                        <ul class="nav navbar-nav navbar-left">
                            <li class="nav-item <%= active_page_class(root_path) %>"><%= link_to I18n.t('views.pages.navbar.home'), root_path, class: "nav-link"%></li>
                            <li class="nav-item <%= active_page_class(portfolio_path) %>"><a class="nav-link" href="/portfolio"><%= t 'views.pages.navbar.portfolio' %></a></li>
                            <li class="nav-item <%= active_page_class(posts_path) %>"><a class="nav-link" href="/news"><%= t 'views.pages.navbar.news' %></a></li>
                            <li class="nav-item <%= active_page_class(vacancies_path) %>"><a class="nav-link" href="/vacancies"><%= t 'views.pages.navbar.vacancies' %></a></li>
                             <li class="nav-item <%= active_page_class(events_path) %>"><a class="nav-link" href="/events"><%= t 'views.pages.navbar.events' %></a></li>
                             <li class="nav-item <%= active_page_class(contacts_new_path) %>"><%= link_to I18n.t('views.pages.navbar.contact'), contacts_new_path, class: 'nav-link' %></li>
                             <li class="nav-item <%= active_page_class(about_path) %>"><a class="nav-link" href="/about"><%= t 'views.pages.navbar.about' %></a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item"><%= link_to 'Admin Dashboard', rails_admin.dashboard_path, class: 'nav-link' %></li>
                            <li class="nav-item"><%= link_to_unless I18n.locale == :en, "en", set_language_english_path %></li>
                            <li class="nav-item"><%= link_to_unless I18n.locale == :ua, "ua", set_language_ukrainian_path %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(window).load(function() {
            $("div").removeClass("nav-preload");
        });
    </script>
</body>