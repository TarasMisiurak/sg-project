<section class="events-header-section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 image-block">
				<div class="text-block">
					<h1><%= t 'views.event.index.header_title' %></h1>
					<h3><a href="#calendar"><%= t 'views.event.index.events_calendar' %></a></h3>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="upcoming-events-section">
	<div class="container-fluid">
		<div class="row">
		<% @upcoming_events.each do |u_event| %>
			<%= link_to event_path(u_event), class: 'event-link' do %>
				<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 event-block">
					<div class="title-block">
						<h3><%= u_event.title %></h3>
					</div>
					<div class="desc-block">
						<p><%= u_event.desc.truncate(150) %></p>
					</div>
					<div class="start-time">
						<h5>Event starts on:</h5>
						<%= u_event.start_time.strftime('%H:%M, %b %d, %Y') %>
					</div>
					<div class="end_time">
						<h5>Event ends on:</h5>
						<%= u_event.end_time.strftime('%H:%M, %b %d, %Y') %>
					</div>
				</div>
			<% end %>
		<% end %>
		</div>
	</div>
</section>
<section class="events-calendar-section">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12 calendar-block">
				<div class="text-block">
					<h3><%= t 'views.event.index.events_calendar' %>	</h3>
				</div>
				<div id="calendar"></div>
			</div>
		</div>
	</div>
</section>