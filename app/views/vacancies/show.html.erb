
<section class="vacancy-show-header-block">
	<div class="container-fluid image-block">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
				<div class="text-block">
					<h1><%= @vacancy.title %></h1>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="info-block">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-1 col-md-6 col-md-offset-1 col-sm-12 col-xs-12 fields-block">
				<div class="title-block">
					<h3><%= @vacancy.title %></h3>
				</div>
				<div class="location-block">
					<h4><%= @vacancy.location %></h4>
				</div>
				<div class="desc-block">
					<h4><%= t 'views.vacancy.show.description' %></h4>
					<p><%= @vacancy.desc %></p>
				</div>
				<div class="requirements-block">
					<h4><%= t 'views.vacancy.show.looking_for' %></h4>
					<p><%= @vacancy.requirements %></p>
				</div>
				<div class="responsibilities-block">
					<h4><%= t 'views.vacancy.show.responsibilities' %></h4>
					<p><%= @vacancy.responsibilities %></p>
				</div>
				<% if @vacancy.additional_requirements.present? %>
					<div class="additional-requirements-block">
						<h4><%= t 'views.vacancy.show.additional_req' %></h4>
						<%= @vacancy.additional_requirements %>
					</div>
				<% end %>
			</div>
			<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 sidebar-block">
				<% @random_vacancies.each do |r_vacancy| %>
					<%= link_to vacancy_path(r_vacancy), class: 'vacancy-link' do %>
					<div class="random-post">
						<div class="title-block">
							<h5><%= r_vacancy.title %></h5>
						</div>
					</div>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</section>