<section class="header-section">
	<div class="container-fluid">
		<div class="row inner-block">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 image-block">
				<div class="text-block">
					<h2><%= t 'views.pages.contact.title' %></h2>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="contact-form" id="contact-form">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12 col-xs-12 block">
				<div class="header-text-block">
					<h3><%= t 'views.pages.contact.ask_anything' %></h3>
				</div>
			</div>
				<%= form_for @contact do |f| %>
					<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 contact-form">
						<% if @contact.errors.any? %>
							<div id="error_explanation">
								<h2>
								<%= "#{pluralize(@contact.errors.count, "error")} prohibited this post from being saved:" %>
								</h2>
								<ul>
								<% @contact.errors.full_messages.each do |msg| %>
									<li>
									<%= msg %>
									</li>
								<% end %>
								</ul>
							</div>
						<% end %>
						<div class="text-block">
							<h3>Contact Us</h3>
						</div>
						<div class="form-group">
							<%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
						</div>
						<div class="form-group">
							<%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
						</div>
						<div class="form-group">
							<%= f.text_field :subject, class: 'form-control', placeholder: 'Subject' %>
						</div>
						<div class="form-group">
							<%= f.text_area :message, class: 'form-control', placeholder: 'Message' %>
						</div>
						<div class="form-group">
							<%= f.submit 'Submit', class: 'form-control btn btn-default' %>
						</div>
					</div>
				<% end %>
		</div>
	</div>
</section>
<section class="more-info">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 image-block">
				<div class="text-block">
					<h2><%= t 'views.pages.contact.find_out_more' %></h2>
					<h3><%= t 'views.pages.contact.visit_our.visit' %><a href="/about"><%= t 'views.pages.contact.visit_out.about' %></a> &amp; <a href="/faq"><%= t 'views.pages.contact.visit_our.faq' %></a> <%= t 'views.pages.contact.visit_our.pages' %></h3>
				</div>
			</div>
		</div>
	</div>
</section>