<div class="container-fluid">
	<div class="row">
		<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
			<div class="form-block">
				<%= form_for @event do |f| %>
					<% if @event.errors.any? %>
						<div id="error_explanation">
							<h2>
							<%= "#{pluralize(@event.errors.count, "error")} prohibited this post from being saved:" %>
							</h2>
							<ul>
							<% @event.errors.full_messages.each do |msg| %>
								<li>
								<%= msg %>
								</li>
							<% end %>
							</ul>
						</div>
					<% end %>
					<div class="field">
						<%= f.text_field :title, class: 'form-control', placeholder: 'Title' %>
					</div>
					<div class="field">
						<%= f.text_field :event_type, class: 'form-control', placeholder: 'Type' %>
					</div>
					<div class="field">
						<%= f.text_area :desc, class: 'form-control', placeholder: 'Description' %>
					</div>
					<div class="field">
						<h4>Set Start Time</h4>
						<%= f.datetime_select :start_time, class: 'form-control' %>
					</div>
					<div class="field">
						<h4>Set End Time</h4>
						<%= f.datetime_select :end_time, class: 'form-control' %>
					</div>
					<div class="actions">
						<%= f.submit 'Submit', class: 'btn btn-default' %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>