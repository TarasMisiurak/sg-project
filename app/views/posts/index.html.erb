<section class="post-index-header">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 image-block">
				<div class="text-block">
					<h1><%= t 'views.post.index.title' %></h1>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="post-index-news-list">
	<div class="container-fluid">
		<% @posts.each do |post| %>
			<div class="row">
				<div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-12 col-xs-12 post-block">
					<div class="post-title">
						<h3><%= link_to post.title, post_path(post), class: 'post-link' %></h3>
					</div>
					<div class="post-body">
						<p><%= post.body.truncate(150) %></p>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</section>
<section class="post-index-random-post">
	<div class="container-fluid">
		<div class="row">
		<% @random_posts.each do |r_post| %>
			<%= link_to post_path(r_post), class: 'post-link' do %>	
				<div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 post-block">
					<div class="text-block">
						<h3><%= r_post.title %></h3>
						<p><%= r_post.body.truncate(150) %></p>
					</div>
				</div>
			<% end %>
		<% end %>
		</div>
	</div>
</section>